                            <option value="GOOGL">GOOGLE</option>
                            <option value="TTE">TOTAL</option><br/><br/>
                        </select>
                    </div>
                    <div class="mt-5">
                        <label for="montant"> Montant: </label><input type="text" name="montant" id="montant" placeholder="Entrez votre montant" class="px-1 py-1 rounded-lg drop-shadow-md">
                    </div>
                    <div class="mt-8">
                        <input type="submit" name="btOK" value="Valider" class="rounded-lg py-2 px-3 bg-green-500 text-white font-bold drop-shadow-md">
                    </div>
                </form>
            </div>
        </div>

        <div class="flex flex-col h-scren w-1/2 items-center">
            <div class="flex flex-col h-3/5 w-2/3 mt-16 items-center rounded-xl bg-white drop-shadow-md">
                <div class="flex flex-row w-full mt-5 mb-12">
                    <div class="flex w-1/2 justify-center text-xl font-bold"><h5> Entreprise </h5></div>
                    <div class="flex w-1/2 justify-center text-xl font-bold"><h5> Montant </h5></div>
                </div>
                {{ display }}
            </div>
        </div>
    </div>

{% endblock %}
