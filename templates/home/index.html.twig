{% extends 'base.html.twig' %}

{% block title %}Workshop{% endblock %}

{% block body %}
<script src="https://cdn.tailwindcss.com"></script>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="flex flex-row h-screen w-screen bg-white">
        <div class="flex flex-col h-scren w-1/2 items-center pt-5">
            <div class="flex flex-col h-2/6 w-1/3 py-6 px-5 bg-white rounded-xl drop-shadow-lg">
                <form action="/" method="POST">
                    <div>
                        <label for="nom">Entreprise: </label>
                        <select name="nom" id="nom" class="rounded-sm drop-shadow-md">
                            <option value="NFLX">NETFLIX</option>
